                                            <GradientStop Color="#FF767676" Offset="0.507" />
                                            <GradientStop Color="#FF5D5D5D" Offset="0.514" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="12" />
