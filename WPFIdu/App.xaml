                    <Trigger.ExitActions>
                        <BeginStoryboard x:Name="tmlMouseLeave_BeginStoryboard" Storyboard="{StaticResource tmlMouseLeave}" />
                    </Trigger.ExitActions>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
