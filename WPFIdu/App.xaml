                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Stroke" TargetName="rectangle" Value="#FF00B3FF" />
                                <Setter Property="StrokeThickness" TargetName="rectangle" Value="2" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true" />
                            <Trigger Property="ToggleButton.IsChecked" Value="true">
                                <Setter Property="Fill" TargetName="rectangle">
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.527,0.945" StartPoint="0.528,0.01">
                                            <GradientStop Color="#FFFF4444" Offset="0" />
                                            <GradientStop Color="#FFA80000" Offset="1" />
                                            <GradientStop Color="#FFFF0202" Offset="0.507" />
                                            <GradientStop Color="#FFDD0000" Offset="0.514" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
