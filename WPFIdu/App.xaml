                            <GradientStop Color="#FF0C8A00" Offset="1" />
                            <GradientStop Color="#FF007C0C" Offset="0.507" />
                            <GradientStop Color="#FF005004" Offset="0.514" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <ContentPresenter HorizontalAlignment="Center" Margin="0,0,0,0" x:Name="contentPresenter" VerticalAlignment="Center" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True" />
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Fill" TargetName="rectangle">
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="0.527,0.945" StartPoint="0.528,0.01">
                                <GradientStop Color="#FF16FF00" Offset="0" />
                                <GradientStop Color="#FF3FAA34" Offset="1" />
                                <GradientStop Color="#FF2BFA2D" Offset="0.507" />
                                <GradientStop Color="#FF00EA02" Offset="0.514" />
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Margin" TargetName="contentPresenter" Value="0,3,0,0" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                    <Setter Property="Fill" TargetName="rectangle">
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="0.527,0.945" StartPoint="0.528,0.01">
                                <GradientStop Color="#FFD7D7D7" Offset="0" />
                                <GradientStop Color="#FF828282" Offset="1" />
                                <GradientStop Color="#FF767676" Offset="0.507" />
                                <GradientStop Color="#FF5D5D5D" Offset="0.514" />
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Opacity" TargetName="contentPresenter" Value="0.3" />
                </Trigger>
                <Trigger Property="IsMouseOver" SourceName="Grid" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource tmlMouseEnter}" />
